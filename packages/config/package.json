{
  "name": "@neato/config",
  "version": "4.0.3",
  "description": "Cloud-native type-safe configuration",
  "files": [
    "dist/**"
  ],
  "type": "module",
  "homepage": "https://neatojs.com/docs/config",
  "bugs": {
    "url": "https://github.com/mrjvs/neatojs/issues"
  },
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "config"
  ],
  "license": "MIT",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "@repo/eslint-config"
    ],
    "ignorePatterns": [
      "dist"
    ]
  },
  "prettier": "@repo/prettier-config",
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts && tsc --noEmit",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "vitest run --root=src --typecheck",
    "test:watch": "vitest --root=src --typecheck",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^20.11.19",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "chalk": "^5.0.0",
    "dotenv": "^16.4.1",
    "joi": "^17",
    "zod": "^3"
  }
}
